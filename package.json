{
  "name": "ride-my-way",
  "version": "1.0.0",
  "description": "Ride-my-way App with Data Structure for Storage",
  "main": "dist/app.js",
  "scripts": {
    "serve": "nodemon dist/app.js",
    "test": "mocha --compilers js:babel-core/register src/test/* --exit",
    "clean": "rmdir -rf dist",
    "build": "mkdir dist && npm run build:dev",
    "build:dev": "babel src -d dist && babel --presets es2015 src -d dist",
    "lint": "eslint ./ --fix",
    "start": "npm run build && npm run serve",
    "coverage": "nyc npm test && nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iamuchejude/Ride-my-way.git"
  },
  "keywords": [
    "API",
    "Restful",
    "Data",
    "JSON"
  ],
  "author": "Uche Jude",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/iamuchejude/Ride-my-way/issues"
  },
  "homepage": "https://github.com/iamuchejude/Ride-my-way#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "codeclimate-test-reporter": "^0.5.0",
    "coveralls": "^3.0.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.13.0",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^12.0.2"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "babel-register": "^6.26.0",
    "body-parser": "^1.18.3",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "fancy-log": "^1.3.2",
    "morgan": "^1.9.0",
    "ng-faker": "^1.0.1",
    "pino": "^4.17.3"
  }
}
