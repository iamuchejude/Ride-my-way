{
  "name": "ride-my-way",
  "version": "1.0.0",
  "description": "Ride-my-way App with Data Structure for Storage",
  "main": "dist/app.js",
  "scripts": {
    "serve": "nodemon ./dist/app.js",
    "test": "cross-env NODE_ENV=Test --reporter=html --reporter=text mocha --compilers js:babel-core/register src/test/* --exit --timeout 3000",
    "clean": "rimraf dist/",
    "create:enum": "babel-node ./src/database/migrations/create_request_enum.js -presets es2015",
    "create:users": "babel-node ./src/database/migrations/create_users_table.js -presets es2015",
    "create:rideOffers": "babel-node ./src/database/migrations/create_ride_offers_table.js -presets es2015",
    "create:rideOfferRequests": "babel-node ./src/database/migrations/create_ride_offer_requests_table.js -presets es2015",
    "migrate": "npm run create:enum && npm run create:users, npm run create:rideOffers && npm run create:rideOfferRequests",
    "build": "npm run clean && mkdir dist && npm run build:dev",
    "build:dev": "babel src -d dist && babel --presets es2015 src -d dist",
    "serve:dev": "nodemon ./src/app.js --exec babel-node",
    "lint": "eslint ./ --fix",
    "start": "npm run build && npm run serve",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iamuchejude/Ride-my-way.git"
  },
  "keywords": [
    "API",
    "Restful",
    "Data",
    "JSON"
  ],
  "author": "Uche Jude",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/iamuchejude/Ride-my-way/issues"
  },
  "homepage": "https://github.com/iamuchejude/Ride-my-way#readme",
  "devDependencies": {
    "@babel/node": "^7.0.0-beta.51",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "codeclimate-test-reporter": "^0.5.0",
    "coveralls": "^3.0.1",
    "cross-env": "^5.2.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.13.0",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "ng-faker": "^1.0.1",
    "nyc": "^12.0.2",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "@babel/core": "^7.0.0-beta.51",
    "@babel/register": "^7.0.0-beta.51",
    "babel-polyfill": "^6.26.0",
    "babel-register": "^6.26.0",
    "base": "^3.0.0",
    "bcrypt": "^2.0.1",
    "body-parser": "^1.18.3",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "dotenv": "^6.0.0",
    "eslint-config-airbnb": "^17.0.0",
    "express": "^4.16.3",
    "fancy-log": "^1.3.2",
    "jsonwebtoken": "^8.3.0",
    "morgan": "^1.9.0",
    "multer": "^1.3.1",
    "nodemon": "^1.17.5",
    "pg": "^7.4.3",
    "pino": "^4.17.3",
    "randomstring": "^1.1.5",
    "uuid": "^3.3.0"
  }
}
